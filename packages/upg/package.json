{
  "name": "@gptlabs/upg",
  "description": "A terminal utility for generating, editing, and executing programs in any language.",
  "keywords": [
    "UPG",
    "GPT-3",
    "GPT Labs"
  ],
  "version": "0.1.12-canary.6",
  "license": "MIT",
  "type": "module",
  "platform": "node",
  "types": "dist/index.d.ts",
  "bin": {
    "upg": "dist/bin.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.txt"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": "./dist/bin.js",
    "./*": "./dist/*/index.js"
  },
  "scripts": {
    "dev-web": "yarn --cwd ../../../api dev",
    "dev": "tsmodule dev",
    "build": "tsmodule build --standalone \"src/{bin.ts,header.txt,taglines.txt}\"",
    "lint": "eslint --fix",
    "pretest": "yarn build && npm link -f",
    "test": "cross-env NODE_ENV=test concurrently -k -s first \"yarn ava\" \"yarn dev-web\"",
    "update-tests": "cross-env NODE_ENV=test concurrently -k -s first \"yarn ava -u\" \"yarn dev-web\"",
    "release": "release-it --ci -VV",
    "canary": "release-it --preRelease=canary --ci -VV",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "clipboardy": "^3.0.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "release: ${version}",
      "tagAnnotation": "${version}"
    },
    "github": {
      "release": true,
      "releaseName": "${version}"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gptlabs/tools.git"
  }
}
