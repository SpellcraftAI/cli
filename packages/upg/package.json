{
  "name": "@gptlabs/upg",
  "description": "This software will burn your house down! Do not use!",
  "version": "0.0.1",
  "license": "MIT",
  "type": "module",
  "platform": "node",
  "types": "dist/index.d.ts",
  "bin": {
    "upg": "dist/bin.js"
  },
  "files": [
    "dist/bin.js",
    "dist/*.html",
    "dist/*.txt"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": "./dist/index.js",
    "./*": "./dist/*/index.js"
  },
  "scripts": {
    "dev-web": "yarn --cwd ../../../upg dev",
    "dev": "concurrently -k \"tsmodule dev\" \"yarn dev-web\"",
    "build": "tsmodule build -b",
    "lint": "eslint --fix",
    "pretest": "yarn build && npm link -f",
    "test": "cross-env NODE_ENV=test concurrently -k -s first \"yarn ava\" \"yarn dev-web\"",
    "update-tests": "cross-env NODE_ENV=test concurrently -k -s first \"yarn ava -u\" \"yarn dev-web\"",
    "prepublishOnly": "yarn test"
  }
}